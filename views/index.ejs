<%- include('partials/header') %>
<ul class="posts container">

    <% posts.forEach((post)=> { %>
        <li class="post">
            <div class="post-title bg-primary">
                <img src="<%= post.image %>" alt="Stree Fighter character">
                <a href="/<%= post.link %>" class="post-link" ><%= post.title %></a>
            </div>
            <div class="post-meta bg-secondary">
                <ul class="post-keywords">
                    <% post.keywords.forEach((keyword)=> { %>
                        <li class="post-keyword">
                            <%= keyword %> 
                        </li>
                    <% }) %>
                </ul>
            <div class="post-dates">
            <span>Created at: <%= post.createdAt %></span>
              <span>Last modified: </strong><%= post.lastModified %></span>
        </div>
            </div>
  
        <div class="post-content">
        <%- post.content %>
        </div>
       
        
        </details>
    <% }) %>
</ul>
